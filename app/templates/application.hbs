{{page-title "home"}}
<h2 class="title">📚 Book Manager</h2>
<div {{on-click-outside this.alert}} class='card'>
{{#each this.flashMessages.queue as |flash|}}
  <FlashMessage
    @flash={{flash}}
    class="flash-message {{flash.type}}"
    as |component flash close|
  >
    <span class="message-text">{{flash.message}}</span>
    <span class="close-btn" role="button" {{on "click" close}}>&times;</span>
  </FlashMessage>
{{/each}}
 {{notification-container position="top-right" zindex="9999"}}
  <div id="liquid-spacer-demo">
    <p>
      {{#if this.showLongMessage}}
        {{this.longMessage}}
      {{else}}
        {{this.shortMessage}}
        <span class="show-more" {{on "click" this.toggleMessage}}>Show More...</span>
      {{/if}}
    </p>

    <LiquidSpacer @growDuration={{250}}>
      {{#if this.showLongMessage}}
        <span class="show-less" {{on "click" this.toggleMessage}}>Show Less</span>
      {{/if}}
    </LiquidSpacer>
  </div>
<div>

